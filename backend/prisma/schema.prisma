generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// TDD §3.1 — Company
model Company {
  id                    String   @id @default(uuid()) @db.Uuid
  name                  String   @db.VarChar(255)
  slug                  String   @unique @db.VarChar(255)
  description           String?  @db.Text
  linkedinUrl           String?  @map("linkedin_url") @db.VarChar(500)
  ashbyBoardName        String?  @map("ashby_board_name") @db.VarChar(500)
  careersPageUrl        String?  @map("careers_page_url") @db.VarChar(500)
  industry              String?  @db.VarChar(100)
  companySize           String?  @map("company_size") @db.VarChar(50)
  headquartersLocation  String?  @map("headquarters_location") @db.VarChar(255)
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")
  metadata              Json?

  jobPostings       JobPosting[]
  newsArticles      NewsArticle[]
  scrapingRuns      ScrapingRun[]
  healthMetrics     CompanyHealthMetric[]
  fundraisingSummary FundraisingSummary?
  fundingRounds     FundingRound[]

  @@index([name])
  @@map("companies")
}

/// TDD §3.1 — Job Posting (normalized from any scraper source)
model JobPosting {
  id                 String    @id @default(uuid()) @db.Uuid
  companyId          String    @map("company_id") @db.Uuid
  externalId         String?   @map("external_id") @db.VarChar(255)
  source             String    @db.VarChar(50)
  sourceUrl          String    @map("source_url") @db.VarChar(1000)
  title              String    @db.VarChar(500)
  description        String?   @db.Text
  descriptionHtml    String?   @map("description_html") @db.Text
  location           String?   @db.VarChar(255)
  remoteType         String?   @map("remote_type") @db.VarChar(50)
  isRemote           Boolean?  @map("is_remote")
  employmentType     String?   @map("employment_type") @db.VarChar(50)
  seniorityLevel     String?   @map("seniority_level") @db.VarChar(50)
  department         String?   @db.VarChar(100)
  team               String?   @db.VarChar(100)
  descriptionHash    String?   @map("description_hash") @db.VarChar(64)
  publishedAt        DateTime? @map("published_at")
  jobUrl             String?   @map("job_url") @db.VarChar(1000)
  applyUrl           String?   @map("apply_url") @db.VarChar(1000)
  compensation       Json?
  secondaryLocations Json?     @map("secondary_locations")
  firstSeenAt        DateTime  @map("first_seen_at")
  lastSeenAt         DateTime  @map("last_seen_at")
  removedAt          DateTime? @map("removed_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  metadata           Json?

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, source, externalId])
  @@index([companyId])
  @@index([source])
  @@index([firstSeenAt])
  @@index([removedAt])
  @@map("job_postings")
}

/// News Article — scraped news about a company
model NewsArticle {
  id          String    @id @default(uuid()) @db.Uuid
  companyId   String    @map("company_id") @db.Uuid
  externalUrl String    @map("external_url") @db.VarChar(2000)
  title       String    @db.VarChar(1000)
  snippet     String?   @db.Text
  content     String?   @db.Text
  publishedAt DateTime? @map("published_at")
  source      String    @db.VarChar(50)
  sentiment   String?   @db.VarChar(20)
  rawScore    Decimal?  @map("raw_score") @db.Decimal(5, 4)
  contentHash String?   @map("content_hash") @db.VarChar(64)
  firstSeenAt DateTime  @map("first_seen_at")
  lastSeenAt  DateTime  @map("last_seen_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, externalUrl])
  @@index([companyId])
  @@index([source])
  @@index([publishedAt])
  @@index([firstSeenAt])
  @@map("news_articles")
}

/// TDD §3.1 — Scraping Run
model ScrapingRun {
  id           String    @id @default(uuid()) @db.Uuid
  companyId    String    @map("company_id") @db.Uuid
  companySlug  String    @map("company_slug") @db.VarChar(255)
  source       String    @db.VarChar(50)
  status       String    @db.VarChar(50)
  jobsFound    Int?      @map("jobs_found")
  jobsNew      Int?      @map("jobs_new")
  jobsUpdated  Int?      @map("jobs_updated")
  jobsRemoved  Int?      @map("jobs_removed")
  errorMessage String?   @map("error_message") @db.Text
  startedAt    DateTime? @map("started_at")
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime  @default(now()) @map("created_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([status])
  @@index([startedAt])
  @@map("scraping_runs")
}

/// TDD §3.1 — Company Health Metrics
model CompanyHealthMetric {
  id                       String   @id @default(uuid()) @db.Uuid
  companyId                String   @map("company_id") @db.Uuid
  metricDate               DateTime @map("metric_date") @db.Date
  totalActiveJobs          Int      @map("total_active_jobs")
  jobsAdded7d              Int?     @map("jobs_added_7d")
  jobsRemoved7d            Int?     @map("jobs_removed_7d")
  jobsAdded30d             Int?     @map("jobs_added_30d")
  jobsRemoved30d           Int?     @map("jobs_removed_30d")
  jobVelocityScore         Decimal? @map("job_velocity_score") @db.Decimal(5, 2)
  departmentDiversityScore Decimal? @map("department_diversity_score") @db.Decimal(5, 2)
  locationDiversityScore   Decimal? @map("location_diversity_score") @db.Decimal(5, 2)
  seniorityDistribution    Json?    @map("seniority_distribution")
  departmentDistribution   Json?    @map("department_distribution")
  healthScore              Decimal? @map("health_score") @db.Decimal(5, 2)
  growthIndicator          String?  @map("growth_indicator") @db.VarChar(50)
  createdAt                DateTime @default(now()) @map("created_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, metricDate])
  @@index([companyId])
  @@index([metricDate])
  @@map("company_health_metrics")
}

/// Fundraising Summary — aggregated fundraising data for a company
model FundraisingSummary {
  id                String   @id @default(uuid()) @db.Uuid
  companyId         String   @map("company_id") @db.Uuid
  totalRaised       Decimal? @map("total_raised") @db.Decimal(15, 2)
  totalRaisedCcy    String?  @map("total_raised_ccy") @db.VarChar(3)
  latestValuation   Decimal? @map("latest_valuation") @db.Decimal(15, 2)
  valuationCcy      String?  @map("valuation_ccy") @db.VarChar(3)
  roundCount        Int      @default(0) @map("round_count")
  investorCount     Int      @default(0) @map("investor_count")
  lastFundingDate   DateTime? @map("last_funding_date")
  lastScrapedAt     DateTime? @map("last_scraped_at")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  company       Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  fundingRounds FundingRound[]

  @@unique([companyId])
  @@index([companyId])
  @@map("fundraising_summaries")
}

/// Funding Round — individual funding round
model FundingRound {
  id              String    @id @default(uuid()) @db.Uuid
  companyId       String    @map("company_id") @db.Uuid
  summaryId       String    @map("summary_id") @db.Uuid
  roundType       String    @map("round_type") @db.VarChar(50)
  amount          Decimal?  @db.Decimal(15, 2)
  amountCcy       String?   @map("amount_ccy") @db.VarChar(3)
  announcedDate   DateTime? @map("announced_date")
  investors       String[]  @db.VarChar(255)
  leadInvestors   String[]  @map("lead_investors") @db.VarChar(255)
  valuation       Decimal?  @db.Decimal(15, 2)
  valuationCcy    String?   @map("valuation_ccy") @db.VarChar(3)
  sourceUrl       String    @map("source_url") @db.VarChar(2000)
  sourceTitle     String    @map("source_title") @db.VarChar(1000)
  rawContent      String?   @map("raw_content") @db.Text
  extractedData   Json?     @map("extracted_data")
  confidenceScore Decimal?  @map("confidence_score") @db.Decimal(3, 2)
  firstSeenAt     DateTime  @map("first_seen_at")
  lastSeenAt      DateTime  @map("last_seen_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  company  Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  summary  FundraisingSummary @relation(fields: [summaryId], references: [id], onDelete: Cascade)

  @@unique([companyId, sourceUrl])
  @@index([companyId])
  @@index([summaryId])
  @@index([announcedDate])
  @@index([roundType])
  @@map("funding_rounds")
}
